<Window x:Class="EvrazRacing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EvrazRacing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibleIfTrueConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0">
            <TextBlock Text="Название машины"/>
            <TextBox Text="{Binding CarName}"/>
            <TextBlock Text="Скорость"/>
            <TextBox Text="{Binding CarSpeed}"/>
            <TextBlock Text="Шанс поломки"/>
            <TextBox Text="{Binding BreakChance}"/>
            <TextBlock Text="Время починки"/>
            <TextBox Text="{Binding RepairTime}"/>
            <RadioButton IsChecked="{Binding IsTruck}" Content="Грузовик"/>
            <RadioButton IsChecked="{Binding IsMotorcycle}"  Content="Мотоцикл"/>
            <RadioButton IsChecked="{Binding IsAutomobile}"  Content="Легковой"/>
            <Border Visibility="{Binding CarWeightPassangerVisibility, Converter={StaticResource VisibleIfTrueConverter}}">
                <StackPanel Orientation="Vertical">
                    <TextBlock Name="gest" Text="Особое значение"/>
                    <TextBox Text="{Binding CarWeightPassanger}"/>
                </StackPanel>
            </Border>
            <CheckBox IsChecked="{Binding Sidecar}" Visibility="{Binding SidecarVisibility, Converter={StaticResource VisibleIfTrueConverter}}" Content="Коляска"/>
            <Button IsEnabled="{Binding AddAvaible}" Command="{Binding AddCar}" Content="Добавить Машину" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1"  Grid.Row="0">
            <TextBlock Text="Длинна трассы"/>
            <TextBox Text="{Binding Name}"/>
        </StackPanel>
    </Grid>
</Window>
